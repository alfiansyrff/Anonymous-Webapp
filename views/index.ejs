<div class="container mt-5">
    <div class="row">
        <div class="col-12 col-md-6 text" style="margin: 0 auto;">
            <h2 class="d-4 text-center text-white">Pesan Untuk Alfian</h2>
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert">
                  <%= msg %> 
                </div>
              <% } %>

            <label for="exampleFormControlTextarea1" class="form-label text-white mt-3">Pesan : </label>
            <% if (pesans.length === 0) { %>
                    <div class="alert alert-danger fw-bold" role="alert">
                      Belum ada pesan nih, Yuk diisi duluğŸ˜.
                    </div>   
              <% } %>
            <% pesans.forEach(el => { %>
            <div class="mb-3">
                    
                    <textarea class="form-control mb-3" id="exampleFormControlTextarea1" rows="3"> <%= el.pesan %></textarea>
                <% }) %>
            </div>
    </div>
</div>
